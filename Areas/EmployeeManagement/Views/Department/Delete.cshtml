@model App.Areas.EmployeeManagement.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<link href="/css/detail-profile.css" type="text/css" rel="stylesheet" />

<partial name="SBAdmin/_Styles" />

<h1 class="offset-1">Delete</h1>

<h3 class="offset-1">Are you sure you want to delete this Department?</h3>
<form asp-action="Delete">
    <input type="hidden" asp-for="DepartmentId" />
    <input type="submit" value="Delete" class="btn btn-danger offset-1" />
</form>
<div class="offset-1">
    <div class="col-md-3 bg-white rounded shadow-lg">
        <div class="information-group mt-3">
            <dl class="col">
                <dt class = "row-sm-2 title-text">
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </dt>
                <dd class = "row-sm-10 content-information">
                    @Html.DisplayFor(model => model.DepartmentName)
                </dd>
                <dt class = "row-sm-2 title-text">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class = "row-sm-10 content-information">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="offset-1 content-information mt-5">
    <a asp-action="Index">
        <i class="far fa-arrow-alt-circle-left"></i>
        Back
    </a>
</div>