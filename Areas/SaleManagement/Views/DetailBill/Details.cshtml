@model App.Areas.SaleManagement.Models.DetailBill

<link href="/css/detail-profile.css" type="text/css" rel="stylesheet" />

<partial name="SBAdmin/_Styles" />

<div>
    <div class="profile_background">
        <div class="profile_title">
            <h1>AllowanceSalary</h1>
            <a asp-action="Edit" asp-route-id="@Model.DetailBillId" class="btn btn-primary sm ">Edit</a>
        </div>
        <div class="contain_profile  mb-5">
            <div class="basic_information">
                <div class="information-title mx-5">
                    <p>Employee profile basic</p>
                </div>
                <hr>
                <div class="basic_information-group">
                    <div class="information-group">
                        <dl class="col mx-5">
                    <dt class = "row-sm-2 title-text">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "row-sm-10 content-information">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class = "row-sm-2 title-text">
            @Html.DisplayNameFor(model => model.Bill)
        </dt>
        <dd class = "row-sm-10 content-information">
            @Html.DisplayFor(model => model.Bill.BillId)
        </dd>
        <dt class = "row-sm-2 title-text">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "row-sm-10 content-information">
            @Html.DisplayFor(model => model.Amount)
        </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mx-5 mb-4 content-information mt-5">
    <a asp-action="Index">
        <i class="far fa-arrow-alt-circle-left"></i>
        Back
    </a>
</div>
