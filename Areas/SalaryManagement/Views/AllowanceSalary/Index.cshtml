@model IEnumerable<App.Areas.SalaryManagement.Models.AllowanceSalary>





<partial name="_AlertCreateMessage" />
<partial name="_AlertDeleteMessage" />

<p>
    <a asp-action="Create" class="btn btn-primary sm">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllowanceSalaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Allowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowanceSalaryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allowance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AllowanceSalaryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AllowanceSalaryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AllowanceSalaryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
